  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "moduleResolution": "node",
    "skipLibCheck": true
  }
}
